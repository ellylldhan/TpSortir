<div id="modale_lieu" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Annulation ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form action="{{ path('annulationSortie', {'sortieId': sortieId}) }}" method="POST" >

                    <div class="form-group mb-3">
                        <label for="motif" class="justify-content-end">
                            motif :
                            <span class="required">*</span>
                        </label>
                        <div class="col-sm-8">
                            <input type="text" name="motif" id="motif" required>
                        </div>
                    </div>


                    <div class="form-example">
                        <input type="submit" value="Valider" class="btn btn-success">
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>