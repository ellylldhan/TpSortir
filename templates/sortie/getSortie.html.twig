{% extends 'base.html.twig' %}

{% block title %} {{ parent() }}  {% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('css/sortie.css') }}">
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-sm-6">

                <div class="form-group mb-3">
                    <label class="col-sm-3 col-form-label justify-content-start">
                        Nom de la sortie :
                    </label>
                    <div class="col-sm-8">
                        {{ sortie.nom }}
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label class="col-sm-3 col-form-label justify-content-start">
                        Date et heure de la sortie :
                    </label>
                    <div class="col-sm-8">
                        {{ sortie.dateDebut|format_datetime() }}
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label class="col-sm-3 col-form-label justify-content-start">
                        Date limite d'inscription :
                    </label>
                    <div class="col-sm-8">
                        {{ sortie.dateCloture|format_datetime() }}
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label class="col-sm-3 col-form-label justify-content-start">
                        Nombre de places :
                    </label>
                    <div class="col-sm-8">
                        {{ sortie.nombreInscriptionsMax }}
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label class="col-sm-3 col-form-label justify-content-start">
                        Dur√©e :
                    </label>
                    <div class="col-sm-8">
                        {{ sortie.duree }}
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label class="col-sm-3 col-form-label justify-content-start">
                        Description et infos :
                    </label>
                    <div class="col-sm-8">
                        {{ sortie.duree }}
                    </div>
                </div>

            </div>
            <div class="col-sm-6">
                <span>Campus : {{ sortie.campusOrganisateur.nom }}</span>
                <span>Lieu : {{ sortie.lieu.nom }}</span>
                <span>Rue : {{ sortie.lieu.rue }}</span>
                <span>Code Postal : {{ sortie.lieu.ville.codePostal }}</span>
                <span>Latitude : {{ sortie.lieu.latitude }}</span>
                <span>Longitude : {{ sortie.lieu.longitude }}</span>
            </div>
        </div>
    </div>

    <div class="divConteneur">
        <table class="table table-striped">
            <thead>
            <th>pseudo</th>
            <th>Nom Prenom</th>
            </thead>

            <tbody>
            {% for inscription in sortie.inscriptions %}
                <tr>
                    <th>
                        {{ inscription.participant.pseudo }}
                    </th>
                    <th>{{ inscription.participant.nom }} {{ inscription.participant.prenom }} </th>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}

{% endblock %}

