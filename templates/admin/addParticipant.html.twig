{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} {{ title}} {% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}

    <div class="container">
        <div class="card mt-5 mb-5">
            <div class="card-header">
                <h1>Ajouter un participant</h1>
            </div>
            <div class="card-body">
                {{ form_start(form, { 'attr': {'class': 'form-inline mt-5', 'id': 'form_add_participant'} }) }}

                {{ form_errors(form) }}

                <div class="col-sm-12">
                    <div class="form-group mb-3">
                        <div class="col-sm-12">
                            {{ form_widget(form.pseudo, { 'attr': {'id': 'participant_pseudo', 'placeholder': 'Pseudo'} }) }}
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="col-sm-12">
                            {{ form_widget(form.motDePasse, { 'attr': {'id': 'participant_mot_de_passe', 'placeholder': 'Mot de passe'} }) }}
                        </div>
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="form-group mb-3">
                        <div class="col-sm-12">
                            {{ form_widget(form.nom, { 'attr': {'id': 'participant_nom', 'placeholder': 'Nom'} }) }}
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="col-sm-12">
                            {{ form_widget(form.prenom, { 'attr': {'id': 'participant_prenom', 'placeholder': 'Prénom'} }) }}
                        </div>
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="form-group mb-3">
                        <div class="col-sm-12">
                            {{ form_widget(form.telephone, { 'attr': {'id': 'participant_telephone', 'placeholder': 'Numéro de téléphone'} }) }}
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <div class="col-sm-12">
                            {{ form_widget(form.mail, { 'attr': {'id': 'participant_mail', 'placeholder': 'Adresse mail'} }) }}
                        </div>
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="form-group mb-4">
                        <label for="participant_administrateur" class="col-sm-2 col-form-label justify-content-start">
                            Administrateur
                        </label>
                        <div class="col-sm-1 justify-content-start">
                            {{ form_widget(form.administrateur, { 'attr': {'id': 'participant_administrateur'} }) }}
                        </div>

                        <label for="participant_actif" class="col-sm-2 col-form-label justify-content-start">
                            Actif
                        </label>
                        <div class="col-sm-1 justify-content-start">
                            {{ form_widget(form.actif, { 'attr': {'id': 'participant_actif'} }) }}
                        </div>
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="form-group mb-4">
                        <label for="participant_campus" class="col-sm-2 col-form-label justify-content-start">
                            Campus
                            <span class="required">*</span>
                        </label>
                        <div class="col-sm-10">
                            {{ form_widget(form.campus, { 'attr': {'id': 'participant_campus'} }) }}
                        </div>
                    </div>
                </div>

                <div class="mb-5 mt-3 ml-auto mr-auto">
                    <button type="submit" class="btn btn_custom">Enregistrer</button>
                    <a type="button" class="btn btn_custom_cancel" href="{{ path('admin_get_participant_page') }}">
                        Annuler
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
