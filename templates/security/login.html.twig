{% extends 'base.html.twig' %}

{% block title %} {{ parent()}} Connexion{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('css/security.css') }}">
{% endblock %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container" style="margin-top: 25px">
        <div class="card mt-5 mb-5">
            <div class="card-header">
                <h1 class="title">Connexion</h1>
            </div>

            <div class="card-body">
                <form class="form-inline mt-5" id="form_connection" method="post">
                    <div class="col-sm-12">
                        <div class="form-group mb-3">
                            <div class="col-sm-12">
                                <input type="text" value="{{ last_username }}" name="_username" id="connexion_pseudo" class="form-control" placeholder="Pseudo" required autofocus>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="col-sm-12">
                                <input type="password" name="_password" id="connexion_password" class="form-control" placeholder="Mot de passe" required>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group mb-3">
                            <label for="remember_me" class="col-sm-3 col-form-label justify-content-start">
                                Se souvenir de moi
                            </label>
                            <div class="col-sm-1 justify-content-start">
                                <input type="checkbox" id="remember_me" name="_remember_me">
                            </div>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="mb-5 mt-3 ml-auto mr-auto">
                        <button type="submit" class="btn btn_custom">Se connecter</button>
                    </div>
                    <div class="col-sm-12">
                        <a type="button" href="{{ path("app_forgot_password_request") }}">Mot de passe oubli√© ?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
