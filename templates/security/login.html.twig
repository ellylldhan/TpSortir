{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block body2 %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="jumbotron container" style="margin-top: 25px">
        <form method="post">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <label for="inputUsername">Username</label>
            <input type="text" value="{{ last_username }}" name="_username" id="inputUsername" class="form-control"
                   required {{ autofocusLogin }}>
            <br>
            <label for="inputPassword">Password</label>
            <input type="password" name="_password" id="inputPassword" class="form-control"
                   required {{ autofocusPswd }}>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <br>
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>

            <button class="btn btn-lg btn-primary" type="submit">
                Sign in
            </button>
        </form>
    </div>
{% endblock %}

